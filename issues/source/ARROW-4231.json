                        "name": "tahmad",
                        "key": "tahmad",
                        "avatarUrls": {
                            "48x48": "https://issues.apache.org/jira/secure/useravatar?ownerId=tahmad&avatarId=37024",
                            "24x24": "https://issues.apache.org/jira/secure/useravatar?size=small&ownerId=tahmad&avatarId=37024",
